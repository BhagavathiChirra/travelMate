<h1>Beautiful Cities of the World</h1>
<% @cities.each do |city| %>
  <div class="cities_individual" id="cities_div">
    <strong><%= link_to city_path(city) do %></strong><br>
      <div>
        <li class="city_link"><%= city.name %></li>
        <li><%= image_tag city.image %></li>
      </div>
    </div>
    <% end %>
<% end %>
