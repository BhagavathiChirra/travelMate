<h1>Post <%= @post.title%></h1>

<div class="container">
  <div class="row">
    <div class="col-sm">
      <% if @post.image.present? %>
        <%= cl_image_tag @post.image %>
      <% else %>
        <%= cl_image_tag "no_image.png" %>
      <% end %>
      <p>
        <%= @post.content%>
      </p>

        <%=  link_to "Edit", edit_post_path(@post)%>
        |
        <%=  link_to "Delete", post_path(@post), method: :delete%>


    </div>
  </div>
</div>
