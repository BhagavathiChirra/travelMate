
<% if @current_user.present?%>
  <%= link_to pages_path %>

<% else %>

<h2>Log In</h2>
  <div id="login_div">
  <%= form_tag login_path, :id => 'login_form' do %>
    <strong> <%= flash[:error] %></strong>
    <br>

    <%= label_tag :email %>
    <%= email_field_tag :email, nil%>
    <br>
    <br>
    <%= label_tag :password %>
    <%= password_field_tag :password, nil%>
    <br><br>

    <%= submit_tag 'Login'%>
  <% end %>
</div>

<% end %>
