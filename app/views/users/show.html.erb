<h1>Hello, My name is <%= @user.username %>!</h1>
<h3>Welcome to my travel page</h3>
<% if @user.id == @current_user.id %>
<%= button_to "Add Post" , new_post_path, class: 'btn btn-primary', method: :get%>
<% end %>
<% if @current_user.admin? %>
  <%= button_to 'Add City', new_city_path, class: 'btn btn-primary', method: :get %>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-sm-6">
    <div>
      <h4>My Latest Blog Posts</h4>
      <ul>
        <% @latest.each do |post| %>
          <li>
          <%= link_to post.title, post_path(post), class: 'post_link' %>
          </li>
        <% end %>
      </ul>
    </div>

    <h4>All Blog Posts</h4>
      <ul id="postdisplay">
        <% @posts.each do |post| %>
          <li>
          <%= link_to post.title, post_path(post), class: 'post_link' %>
          <%= pluralize post.liked_by.count, 'like' %>.
          </li>
        <% end %>
      </ul>
      <%= cl_image_tag @user.image, class: 'photos' %>
    </div>

  <div class="col-sm-6">
   <h4>News from my hometown, <%= @user.address %></h4>
   <div id="articles" data-article="<%= @user.address %>">Loading now...</div>

  <br>

   <div><h4>Weather from my region:</h4>
     <div id="weather" data-article="<%= @user.address %>">Loading now...</div>
   </div>
   </div>
 </div>
</div>
